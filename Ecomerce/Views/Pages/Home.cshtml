@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <!-- Ürün Listesi -->
        <div class="col-md-9">
            <div class="album py-5 bg-body-tertiary">
                <div class="container">
                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                        <!-- Ürün 1 -->
                        <div class="col">
                            <div class="card shadow-sm">
                                <img src="~/pictures/product1.jpg" class="card-img-top" width="100%" height="225" alt="Ürün 1">
                                <div class="card-body">
                                    <h5 class="card-title">Ürün 1</h5>
                                    <p class="card-text">Bu ürün hakkında kısa bir açıklama. Özellikleri ve faydaları.</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary">Detaylar</button>
                                        </div>
                                        <small class="text-muted">100 TL</small>
                                    </div>
                                    <button type="button" class="btn btn-primary mt-2 float-end"
                                            onclick="addToCart(1, 'Ürün 1', 100)">
                                        Sepete Ekle
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Ürün 2 -->
                        <div class="col">
                            <div class="card shadow-sm">
                                <img src="~/pictures/product2.jpg" class="card-img-top" width="100%" height="225" alt="Ürün 2">
                                <div class="card-body">
                                    <h5 class="card-title">Ürün 2</h5>
                                    <p class="card-text">İkinci ürünümüz hakkında bilgi. Neden bu ürünü tercih etmelisiniz?</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary">Detaylar</button>
                                        </div>
                                        <small class="text-muted">150 TL</small>
                                    </div>
                                    <button type="button" class="btn btn-primary mt-2 float-end"
                                            onclick="addToCart(2, 'Ürün 2', 150)">
                                        Sepete Ekle
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Ürün 3 -->
                        <div class="col">
                            <div class="card shadow-sm">
                                <img src="~/pictures/product3.jpg" class="card-img-top" width="100%" height="225" alt="Ürün 3">
                                <div class="card-body">
                                    <h5 class="card-title">Ürün 3</h5>
                                    <p class="card-text">Üçüncü ürünümüzün özellikleri ve kullanım alanları hakkında bilgi.</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary">Detaylar</button>
                                        </div>
                                        <small class="text-muted">200 TL</small>
                                    </div>
                                    <button type="button" class="btn btn-primary mt-2 float-end"
                                            onclick="addToCart(3, 'Ürün 3', 200)">
                                        Sepete Ekle
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Sepet Bölümü -->
        <div class="col-md-3">
            <aside class="sidebar">
                <h4>Sepetim</h4>
                <ul id="cartItems" class="list-group">
                    <li class="list-group-item">Sepet boş</li>
                </ul>
                <button id="checkoutButton" class="btn btn-primary mt-3">Ödeme Yap</button>
            </aside>
        </div>

        <script>
            // Cookie'den sepeti okuma
            function getCartFromCookie() {
                const cart = document.cookie
                    .split('; ')
                    .find(row => row.startsWith('cart='))?.split('=')[1];
                return cart ? JSON.parse(decodeURIComponent(cart)) : [];
            }

            // Sepeti cookie'ye kaydetme
            function saveCartToCookie(cart) {
                document.cookie = `cart=${encodeURIComponent(JSON.stringify(cart))}; path=/; max-age=2592000`; // 30 gün
            }

            // Sepete ürün ekleme
            function addToCart(productId, productName, price) {
                const cart = getCartFromCookie();
                const item = cart.find(i => i.productId === productId);

                if (item) {
                    item.quantity++;
                } else {
                    cart.push({ productId, productName, price, quantity: 1 });
                }

                saveCartToCookie(cart);
                renderCart();
            }

            // Sepetten ürün silme
            function removeFromCart(productId) {
                let cart = getCartFromCookie();
                cart = cart.filter(item => item.productId !== productId); // Ürünü çıkar
                saveCartToCookie(cart);
                renderCart();
            }

            // Sepeti ekrana yazdırma
            function renderCart() {
                const cart = getCartFromCookie();
                const cartItems = document.getElementById('cartItems');
                cartItems.innerHTML = '';

                if (cart.length === 0) {
                    cartItems.innerHTML = '<li class="list-group-item">Sepet boş</li>';
                    return;
                }

                cart.forEach(item => {
                    const li = document.createElement('li');
                    li.className = 'list-group-item d-flex justify-content-between align-items-center';
                    li.innerHTML = `
                            ${item.productName} - ${item.quantity} Adet - ${item.price * item.quantity} TL
                            <button class="btn btn-sm btn-danger ms-2" onclick="removeFromCart(${item.productId})">
                                &times;
                            </button>
                        `;
                    cartItems.appendChild(li);
                });
            }

            // Ödeme Yap butonuna tıklanınca
            document.getElementById('checkoutButton').addEventListener('click', () => {
                const cart = getCartFromCookie();
                if (cart.length === 0) {
                    alert('Sepetiniz boş!');
                    return;
                }

                fetch('/api/checkout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ cart })
                })
                    .then(response => response.json())
                    .then(data => {
                        alert('Sipariş tamamlandı!');
                        saveCartToCookie([]); // Sepeti temizle
                        renderCart();
                    })
                    .catch(error => {
                        console.error('Hata:', error);
                        alert('Ödeme sırasında bir hata oluştu.');
                    });
            });

            // Sayfa yüklendiğinde sepeti göster
            document.addEventListener('DOMContentLoaded', renderCart);
        </script>
