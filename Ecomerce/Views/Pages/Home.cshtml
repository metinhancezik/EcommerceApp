@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <!-- Ürün 1 -->
            <div class="col">
                <div class="card shadow-sm">
                    <img src="~/pictures/product1.jpg" class="bd-placeholder-img card-img-top" width="100%" height="225" alt="Ürün 1">
                    <div class="card-body">
                        <h5 class="card-title">Ürün 1</h5>
                        <p class="card-text">Bu ürün hakkında kısa bir açıklama. Özellikleri ve faydaları.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary">Detaylar</button>
                            </div>
                            <small class="text-body-secondary">100 TL</small>
                        </div>
                        <button type="button" class="btn btn-primary mt-2 float-end">Sepete Ekle</button>
                    </div>
                </div>
            </div>

            <!-- Ürün 2 -->
            <div class="col">
                <div class="card shadow-sm">
                    <img src="~/pictures/product2.jpg" class="bd-placeholder-img card-img-top" width="100%" height="225" alt="Ürün 2">
                    <div class="card-body">
                        <h5 class="card-title">Ürün 2</h5>
                        <p class="card-text">İkinci ürünümüz hakkında bilgi. Neden bu ürünü tercih etmelisiniz?</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary">Detaylar</button>
                            </div>
                            <small class="text-body-secondary">150 TL</small>
                        </div>
                        <button type="button" class="btn btn-primary mt-2 float-end">Sepete Ekle</button>
                    </div>
                </div>
            </div>

            <!-- Ürün 3 -->
            <div class="col">
                <div class="card shadow-sm">
                    <img src="~/pictures/product3.jpg" class="bd-placeholder-img card-img-top" width="100%" height="225" alt="Ürün 3">
                    <div class="card-body">
                        <h5 class="card-title">Ürün 3</h5>
                        <p class="card-text">Üçüncü ürünümüzün özellikleri ve kullanım alanları hakkında bilgi.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary">Detaylar</button>
                            </div>
                            <small class="text-body-secondary">200 TL</small>
                        </div>
                        <button type="button" class="btn btn-primary mt-2 float-end">Sepete Ekle</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>