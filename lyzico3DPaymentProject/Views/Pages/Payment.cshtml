@model Iyzico3DPaymentProject.Models.PaymentViewModel
@{
    ViewData["Title"] = "Ödeme Sayfası";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="payment-container mx-auto" style="max-width: 500px;">
<div class="modal-dialog" role="document">
    <div class="modal-content rounded-4 shadow">
        <div class="modal-header p-4">
            <h1 class="modal-title fs-5">Ödeme Modülü</h1>
        </div>
        @using (Html.BeginForm("ProcessPayment", "PaymentView", FormMethod.Post, new { id = "paymentForm" }))
        {
        <div class="modal-body py-0" p-4>
            <div class="odeme-formu p-4">
             
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        @Html.LabelFor(m => m.CardHolderName, "Kart Sahibinin Adı:", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.CardHolderName, new { @class = "form-control", required = "required" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.CardNumber, "Kart Numarası:", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.CardNumber, new { @class = "form-control", required = "required", data_mask = "0000 0000 0000 0000" })
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            @Html.LabelFor(m => m.ExpireMonth, "Son Kullanma Ayı:", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.ExpireMonth, new { @class = "form-control", placeholder = "AA", required = "required" })
                        </div>

                        <div class="col-md-4 mb-3">
                            @Html.LabelFor(m => m.ExpireYear, "Son Kullanma Yılı:", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.ExpireYear, new { @class = "form-control", placeholder = "YY", required = "required" })
                        </div>

                        <div class="col-md-4 mb-3">
                            @Html.LabelFor(m => m.Cvc, "Güvenlik Kodu:", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Cvc, new { @class = "form-control", required = "required", maxlength = "4" })
                        </div>
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Price, "Ödeme Tutarı:", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Price, new { @class = "form-control", required = "required", type = "number", step = "0.01", min = "0" })
                    </div>
                
            </div>
        </div>
        <div class="modal-footer flex-column  p-4">
            <button type="submit" form="paymentForm" class="btn btn-lg btn-primary">Ödemeyi Tamamla</button>
        </div>
                }
    </div>
</div>
</div>