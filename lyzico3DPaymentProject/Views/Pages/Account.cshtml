@model Iyzico3DPaymentProject.Models.AccountViewModel
@{
    ViewData["Title"] = "Hesap Bilgileri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hesap Bilgileri</h2>

<div class="hesap-formu">
    @using (Html.BeginForm("SaveAccount", "Pages", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.Name, "Ad:")
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Surname, "Soyad:")
            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.GsmNumber, "Telefon Numarası:")
            @Html.TextBoxFor(m => m.GsmNumber, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email, "E-posta:")
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required", type = "email" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.IdentityNumber, "Kimlik Numarası:")
            @Html.TextBoxFor(m => m.IdentityNumber, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.RegistrationAddress, "Adres:")
            @Html.TextAreaFor(m => m.RegistrationAddress, new { @class = "form-control", required = "required", rows = "3" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.City, "Şehir:")
            @Html.TextBoxFor(m => m.City, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Country, "Ülke:")
            @Html.TextBoxFor(m => m.Country, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ZipCode, "Posta Kodu:")
            @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control", required = "required" })
        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>
    }
</div>